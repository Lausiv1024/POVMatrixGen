@page "/"

<PageTitle>Index</PageTitle>

<h1>POVMatrixGen</h1>

@using System.Linq
<div class="grid-container">
    @foreach (var row in Enumerable.Range(0, 7))
    {
        <div class="grid-row">
            @foreach (var col in Enumerable.Range(0, columns))
            {
                <div class="grid-item" id="dot-@row-@col">
                    
                </div>
            }
        </div>
    }
</div>

<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(@columns, 1fr);
        gap: 10px;
        width: 10px;
        height: 10px;
    }

    .grid-row {
        display: contents;
    }

    .grid-item {
        background-color: lightgray;
        border: 1px solid black;
        padding: 20px;
        text-align: center;
    }
</style>
